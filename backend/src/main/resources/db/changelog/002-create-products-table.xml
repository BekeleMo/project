<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="002-create-products-table" author="system">
        <createTable tableName="products">
            <column name="id" type="BIGSERIAL">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(200)">
                <constraints nullable="false"/>
            </column>
            <column name="sku" type="VARCHAR(100)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="category" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="current_stock" type="INTEGER">
                <constraints nullable="false"/>
            </column>
            <column name="min_stock" type="INTEGER">
                <constraints nullable="false"/>
            </column>
            <column name="max_stock" type="INTEGER">
                <constraints nullable="false"/>
            </column>
            <column name="price" type="DECIMAL(12,2)">
                <constraints nullable="false"/>
            </column>
            <column name="cost" type="DECIMAL(12,2)"/>
            <column name="supplier" type="VARCHAR(200)"/>
            <column name="status" type="VARCHAR(20)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="TEXT"/>
            <column name="barcode" type="VARCHAR(100)"/>
            <column name="weight" type="DECIMAL(8,3)"/>
            <column name="dimensions" type="VARCHAR(100)"/>
            <column name="created_at" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="TIMESTAMP"/>
            <column name="version" type="BIGINT" defaultValue="0"/>
        </createTable>

        <createIndex tableName="products" indexName="idx_products_sku">
            <column name="sku"/>
        </createIndex>

        <createIndex tableName="products" indexName="idx_products_category">
            <column name="category"/>
        </createIndex>

        <createIndex tableName="products" indexName="idx_products_status">
            <column name="status"/>
        </createIndex>

        <createIndex tableName="products" indexName="idx_products_name">
            <column name="name"/>
        </createIndex>

        <createIndex tableName="products" indexName="idx_products_low_stock">
            <column name="current_stock"/>
            <column name="min_stock"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>